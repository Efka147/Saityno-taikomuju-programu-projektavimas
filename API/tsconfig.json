{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2016",
        "module": "CommonJS",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceRoot": "/src"
    }
}
